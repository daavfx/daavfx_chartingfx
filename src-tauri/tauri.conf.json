{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "charting-daavfx",
  "version": "0.0.0",
  "identifier": "com.charting-daavfx.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DAAVFX Charting",
        "width": 1280,
        "height": 800,
        "decorations": true,
        "transparent": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
      "shell": {
          "open": true
      }
  }
}
